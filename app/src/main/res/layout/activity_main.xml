<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCounterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/counter_label"
        android:layout_above="@id/txtCounterLabel"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtCounterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtCounterLabel"
        android:gravity="center"
        android:text="0"
        android:textSize="24dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerInParent="true"
    android:layout_below="@id/txtCounterValue"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/btn_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tap"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="14dp"
        />
    </LinearLayout>
</RelativeLayout>